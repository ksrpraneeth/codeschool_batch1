  CREATE TABLE Payment_Invoices(
    Payment_ID VARCHAR(25) PRIMARY KEY NOT NULL UNIQUE,
    Payment_Type VARCHAR(25) NOT NULL,
    Amount VARCHAR(25) NOT NULL, 
    Discount INTEGER NOT NULL
);
