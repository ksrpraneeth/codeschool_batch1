CREATE TABLE Guest(
    G_ID VARCHAR(25) PRIMARY KEY NOT NULL UNIQUE,
    G_First_Name VARCHAR(25) NOT NULL,
    G_Last_Name VARCHAR(25) NOT NULL,
    G_Gender VARCHAR(25) NOT NULL,
    G_Email VARCHAR(30) NOT NULL,
    G_CIty VARCHAR(30) NOT NULL 
);
